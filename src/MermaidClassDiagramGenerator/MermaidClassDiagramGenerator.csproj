<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>mcdg</ToolCommandName>
    <PackageOutputPath>../../nupkg</PackageOutputPath>
    <Version>1.0.0</Version>
    <PackageTags>mermaid;diagram;class diagram;generation;C#;markdown;class files</PackageTags>
    <Copyright>Copyright (c) 2025 fwullschleger</Copyright>
    <Authors>fwullschleger</Authors>
    <Owners>fwullschleger</Owners>
    <RepositoryUrl>https://github.com/fwullschleger/mcdg</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageDescription>Dotnet tool for generating a mermaid class-diagram from C# class files</PackageDescription>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ClassGraph\ClassGraph.csproj" />
  </ItemGroup>

</Project>
